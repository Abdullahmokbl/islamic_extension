{
  "name": "islamic",
  "displayName": "Islamic",
  "publisher": "abdullahmokbl",
  "description": "Get a verse(an aya), hadith or azkar during your coding session",
  "version": "1.0.2",
  "icon": "./index.jpeg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abdullahmokbl/islamic_extension"
  },
  "engines": {"vscode": "^1.76.0"},
  "categories": ["Other"],
  "keywords": ["quran","aya","hadith","azkar","muslim"],
  "activationEvents": ["*"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "islamic.getAya",
        "category": "Islamic",
        "title": "Get Aya",
        "icon": "./index.jpeg"
      },
      {
        "command": "islamic.getHadith",
        "category": "Islamic",
        "title": "Get Hadith",
        "icon": "./index.jpeg"
      },
      {
        "command": "islamic.getAzkar",
        "category": "Islamic",
        "title": "Get Azkar",
        "icon": "./index.jpeg"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Islamic",
      "properties": {
        "islamic.interval": {
          "type": "number",
          "default": 10,
          "enum": [
            10,
            15,
            30,
            60,
            90,
            120,
            180
          ],
          "description": "Select time between notification."
        },
        "islamic.language": {
          "type": "string",
          "description": "Select preferable language",
          "default": "Arabic",
          "enum": [
            "Arabic",
            "English"
          ]
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "axios": "^1.3.4"
  }
}
